div(
  class=form.htmlClass
).form-group

  label.control-label(for=form.key) #{ form.title }

  if (!form.fieldAddonLeft && !form.fieldAddonRight)

    input.form-control(
      id=form.key
      placeholder=form.placeholder
      name=form.key
    )

  else
    p 2

  if (!form.feedback !== false)

    span.form-control-feedback.glyphicon(
      aria-hidden="true"
      class=!form.$pristine && !form.$valid ? 'glyphicon-ok' : ''
      class=!form.$pristine && !form.$valid ? 'glyphicon-remove' : ''
    )

  div.help-block !{ form.description }
